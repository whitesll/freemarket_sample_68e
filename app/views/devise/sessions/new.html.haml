.background
  .header
    .header__logo
      = image_tag "logo/logo.png", size: "214x62"
  .user_info
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form_box
        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "form_box_large"
      .form_box
        = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード", class: "form_box_large"
      - if devise_mapping.rememberable?
        .form_box
          = f.check_box :remember_me
          = f.label :remember_me

      .form_send
        = f.submit "ログイン", class: "form_send_btn"
        = render "devise/shared/links"
      .sign_up_link
        アカウントをお持ちでない方はこちら
        %br/
        = f.submit "メールアドレスで新規登録", class: "sign_up_link_btn"


  .footer
    %ul.terms
      %li プライバシーポリシー
      %li FURIMA利用規約
      %li 特定商取引に関する表記
    .footer__logo
      = image_tag "logo/logo-white.png", size: "170x50"