= render "products/header"



.mypage--background
  .mypage--flame
    .mypage--space
    .mypage
      .mypage_side
        = link_to user_path(current_user[:id]), class: "mypage_side_box" do
          .mypage_side_box--name
            マイページ
          .mypage_side_box--arrow
            ▶︎
        = link_to "#", class: "mypage_side_box" do
          .mypage_side_box--name
            出品する
          .mypage_side_box--arrow
            ▶︎
        = link_to exh_user_path(current_user[:id]), class: "mypage_side_box" do
          .mypage_side_box--name
            出品した商品
          .mypage_side_box--arrow
            ▶︎
        = link_to buy_user_path(current_user[:id]), class: "mypage_side_box" do
          .mypage_side_box--name
            購入した商品
          .mypage_side_box--arrow
            ▶︎
        = link_to "#", class: "mypage_side_box" do
          .mypage_side_box--name
            ガイド
          .mypage_side_box--arrow
            ▶︎
        = link_to "#", class: "mypage_side_box" do
          .mypage_side_box--name
            お問い合わせ
          .mypage_side_box--arrow
            ▶︎

        .mypage_side--menubox
          設定

        = link_to edit_user_path(current_user[:id]), class: "mypage_side_box" do
          .mypage_side_box--name
            プロフィール確認・変更
          .mypage_side_box--arrow
            ▶︎
        = link_to edit_address_user_path(current_user[:id]), class: "mypage_side_box--current" do
          .mypage_side_box--name
            発送元・お届け住所確認・変更
          .mypage_side_box--arrow
            ▶︎
        = link_to credit_user_path(current_user[:id]), class: "mypage_side_box" do
          .mypage_side_box--name
            支払い情報
          .mypage_side_box--arrow
            ▶︎
        = link_to destroy_user_session_path, method: :delete, class: "mypage_side_box" do
          .mypage_side_box--name
            ログアウト
          .mypage_side_box--arrow
            ▶︎

      .mypage_main
        .mypage_main--header 
          .mypage_main--header_opacty
            .my_items
              .my_items--nickname
                = @user.nickname
              .my_items_under
                .my_items_under--exh
                  出品中 
                .my_items_under--valuation
                  出品数 
            

        .mypage_main_center
          .form_top
            住所情報入力
          .user_info
            = form_for @address do |f|
              = render "devise/shared/error_messages", resource: @address
              .form_box
                お届け先氏名
                %span(class="required")
                  必須
                .form_box_name
                  %br/
                  = f.text_field :address_full_width_last_name, placeholder: " 例)山田", class: "form_box_name_side"
                  %br/
                  = f.text_field :address_full_width_first_name, placeholder: " 例)太郎", class: "form_box_name_side"
              .form_box
                お届け先氏名ふりがな
                %span(class="required")
                  必須
                .form_box_name
                  = f.text_field :address_hira_last_name, placeholder: " 例)やまだ", class: "form_box_name_side"
                  %br/
                  = f.text_field :address_hira_first_name, placeholder: " 例)たろう", class: "form_box_name_side"
              .form_box
                電話番号
                %span(class="required")
                  必須
                %br/
                = f.phone_field :phone_number, placeholder: " 例) 09011112222", class: "form_box_large"
              .form_box
                お届け先住所
                %span(class="required")
                  マンション名等以外は必須
                %br/
                = f.text_field :zip_code, placeholder: " 郵便番号", class: "form_box_small"
                %br/
                = f.text_field :prefectures, placeholder: " 都道府県", class: "form_box_large"
                %br/
                = f.text_field :city, placeholder: " 市区町村", class: "form_box_large"
                %br/
                = f.text_field :address, placeholder: " 番地",class: "form_box_large"
                %br/
                = f.text_field :room_number, placeholder: " マンション名、建物名、部屋番号",class: "form_box_large"
              .form_send
                = f.submit "登録", class: "form_send_btn"
                = @address.zip_code

    .mypage--space




= render "products/footer"
= render "products/exhibition"
